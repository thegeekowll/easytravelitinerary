# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_API_VERSION=v1

# Application URLs
NEXT_PUBLIC_APP_URL=http://168.231.124.213
NEXT_PUBLIC_APP_NAME=Travel Agency Management System

# Authentication
NEXT_PUBLIC_AUTH_COOKIE_NAME=auth_token
NEXT_PUBLIC_REFRESH_TOKEN_COOKIE_NAME=refresh_token

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_PUBLIC_ITINERARIES=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true

# PDF Generation
NEXT_PUBLIC_PDF_PREVIEW_ENABLED=true

# File Upload
NEXT_PUBLIC_MAX_FILE_SIZE=10485760
NEXT_PUBLIC_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/jpg,application/pdf

# Pagination
NEXT_PUBLIC_DEFAULT_PAGE_SIZE=20
NEXT_PUBLIC_MAX_PAGE_SIZE=100

# Map Configuration (if using maps)
NEXT_PUBLIC_MAPBOX_TOKEN=your-mapbox-token
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Analytics (if using)
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
NEXT_PUBLIC_GTM_ID=GTM-XXXXXXX

# Environment
NEXT_PUBLIC_ENVIRONMENT=development
NODE_ENV=development

# Rate Limiting
NEXT_PUBLIC_API_RATE_LIMIT=60

# Session
NEXT_PUBLIC_SESSION_TIMEOUT=1800000

# Date/Time Format
NEXT_PUBLIC_DATE_FORMAT=MMM dd, yyyy
NEXT_PUBLIC_TIME_FORMAT=HH:mm
NEXT_PUBLIC_DATETIME_FORMAT=MMM dd, yyyy HH:mm

# Currency
NEXT_PUBLIC_DEFAULT_CURRENCY=USD
NEXT_PUBLIC_CURRENCY_SYMBOL=$

# Locale
NEXT_PUBLIC_DEFAULT_LOCALE=en-US
NEXT_PUBLIC_TIMEZONE=America/New_York

# Theme
NEXT_PUBLIC_DEFAULT_THEME=light

# Contact Information
NEXT_PUBLIC_SUPPORT_EMAIL=support@youragency.com
NEXT_PUBLIC_SUPPORT_PHONE=+1-XXX-XXX-XXXX

# Social Media (for sharing)
NEXT_PUBLIC_TWITTER_HANDLE=@youragency
NEXT_PUBLIC_FACEBOOK_PAGE=youragency

# Debug
NEXT_PUBLIC_DEBUG=false
NEXT_PUBLIC_SHOW_DEVTOOLS=false
